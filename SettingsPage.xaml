<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StoryForge.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button -->
        <Button x:Name="BackButton" 
                Style="{StaticResource DefaultButtonStyle}"
                HorizontalAlignment="Left" 
                Margin="16,16,0,0"
                Click="BackButton_Click">
            <StackPanel Orientation="Horizontal">
                <FontIcon FontFamily="Segoe Fluent Icons" 
                          Glyph="&#xE72B;" 
                          Margin="0,0,8,0"/>
                <TextBlock Text="Back"/>
            </StackPanel>
        </Button>

        <ScrollViewer Grid.Row="1" Padding="16">
            <StackPanel Spacing="16" MaxWidth="800">
                <StackPanel>
                    <TextBlock Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                    <StackPanel BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <ToggleSwitch Header="Theme" OnContent="Dark" OffContent="Light" IsOn="{x:Bind IsDarkTheme, Mode=TwoWay}"/>
                        <TextBlock Text="Changes will take effect the next time you start the app" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="AI Model Settings" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                    <StackPanel BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <TextBox Header="API Endpoint" PlaceholderText="https://api.example.com/v1/chat" Text="{x:Bind ApiEndpoint, Mode=TwoWay}" Margin="0,0,0,8"/>
                        <PasswordBox Header="API Key" PlaceholderText="Enter your API key" Password="{x:Bind ApiKey, Mode=TwoWay}" Margin="0,0,0,8"/>
                        <ComboBox Header="Model" SelectedIndex="{x:Bind SelectedModelIndex, Mode=TwoWay}" Width="250" HorizontalAlignment="Left">
                            <ComboBoxItem Content="gpt-4"/>
                            <ComboBoxItem Content="gpt-3.5-turbo"/>
                            <ComboBoxItem Content="claude-3-opus"/>
                            <ComboBoxItem Content="claude-3-sonnet"/>
                            <ComboBoxItem Content="llama3"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Chat Settings" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                    <StackPanel BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <Slider Header="Maximum Response Length" Minimum="100" Maximum="4000" StepFrequency="100" Value="{x:Bind MaxResponseLength, Mode=TwoWay}" Margin="0,0,0,8"/>
                        <CheckBox Content="Auto-scroll to new messages" IsChecked="{x:Bind AutoScrollToNewMessages, Mode=TwoWay}" Margin="0,0,0,8"/>
                        <CheckBox Content="Show thinking indicator" IsChecked="{x:Bind ShowThinkingIndicator, Mode=TwoWay}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="About" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                    <StackPanel BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <TextBlock Text="StoryForge" Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock Text="Version 1.0.0" Style="{StaticResource BodyTextBlockStyle}" Margin="0,4,0,0"/>
                        <TextBlock Text="Â© 2025 StoryForge Team" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,8,0,0"/>
                        <HyperlinkButton Content="View License" Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="Save Changes" HorizontalAlignment="Left" Margin="0,16,0,0" Click="SaveButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>